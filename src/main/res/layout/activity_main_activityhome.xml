<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:padding="24dp">
    <!--
    Adições do menu:
    - Uso do ScroolView para facilitar o uso do menu.
    - Restruturação da organização dos botões e textos,
     facilitando a leitura e trazendo leveza ao sistema.
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu Principal"
            android:textSize="24sp"
            android:textColor="#1976D2"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Seção de Cadastro -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnCadastrarAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar Aluno"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnCadastrarDisciplina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar Disciplina"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- Seção de Listagem -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listar"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnListarAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listar Alunos"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnListarDisciplina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listar Disciplinas"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- Botão de Sair -->
        <Button
            android:id="@+id/btnSair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sair"
            android:backgroundTint="#90CAF9"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
